{
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rraziel/es-injection.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:release": "lerna run build:release",
    "build:watch": "lerna run build:watch",
    "compile": "lerna run compile",
    "compile:watch": "lerna run compile:watch",
    "publish": "lerna publish",
    "quality:lint": "tslint --project ./packages/tsconfig.base.json --config ./packages/tslint.json",
    "test": "jest --no-cache --verbose",
    "test:coverage": "jest --no-cache --coverage",
    "test:watch": "jest --watch --no-cache --verbose"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/packages/*/src/**/*.ts",
      "!<rootDir>/packages/*/src/**/index.ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": "\\.spec\\.ts",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "codecov": "3.3.0",
    "jest": "24.5.0",
    "jest-create-mock-instance": "1.1.0",
    "jest-junit": "6.3.0",
    "lerna": "3.13.3",
    "reflect-metadata": "0.1.13",
    "terser-webpack-plugin": "1.2.3",
    "ts-jest": "24.0.2",
    "ts-loader": "5.3.3",
    "ts-node": "8.0.3",
    "tslint": "5.14.0",
    "typescript": "3.3.3333",
    "webpack": "4.30.0",
    "webpack-cli": "3.3.0",
    "webpack-node-externals": "1.7.2"
  }
}
