{
  "name": "es-injection",
  "version": "0.1.0",
  "description": "A modern, lightweight dependency injection library inspired by JSR-303 and Spring.",
  "homepage": "https://github.com/rraziel/es-injection",
  "bugs": "https://github.com/rraziel/es-injection/issues",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rraziel/es-injection.git"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc --watch -p .",
    "test": "./node_modules/.bin/jest --watch --no-cache --verbose",
    "coverage": "./node_modules/.bin/jest --no-cache --coverage",
    "tslint": "tslint --project ./tsconfig.json --config ./conf/tslint.json"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/index.ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "testResultsProcessor": "<rootDir>/node_modules/jest-junit-reporter",
    "testRegex": "\\.spec\\.ts",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "reflect-metadata": "0.1.12"
  },
  "devDependencies": {
    "@types/jest": "22.2.3",
    "codecov": "3.0.1",
    "jest": "22.4.3",
    "jest-create-mock-instance": "1.0.3",
    "jest-junit-reporter": "1.1.0",
    "ts-jest": "22.4.4",
    "ts-node": "6.0.1",
    "tslint": "5.9.1",
    "typescript": "2.6.2"
  }
}
